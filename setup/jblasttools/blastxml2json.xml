<tool id="jb_blastxml2json" name="BlastXml 2 json" version="1.0.0">
  <description>Convert BlastXML to JSON - for JBlast Module</description>
  <command>jblast-xml2json -x $input1 -o $jblast_output_json</command>
  <inputs>
    <param format="blastxml" name="input1" type="data" label="BlastXML input file"/>
  </inputs>
  <outputs>
    <data format="json" name="jblast_output_json" label="jblast BlastXML to JSON output"/>
  </outputs>

  <help>
BlastXML to JSON for JBrowse Blaster      
AUTHOR: eyao                               
  </help>

</tool>